<mvc:View
    controllerName="com.procurement.ui.controller.PRDetails"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
    displayBlock="true">
    <Page title="Internal Document: Purchase Requisition" showNavButton="true" navButtonPress=".onNavBack">
        <content>
            <VBox class="sapUiMediumMargin">
                 <Title text="Requisition #{requisitionHeaderID}" level="H2"/>
                 <ObjectStatus text="Status: {status}" state="{= ${status} === 'Pending Approval' ? 'Warning' : 'Information' }" class="sapUiSmallMarginBottom"/>
                 
                 <f:SimpleForm editable="false" layout="ResponsiveGridLayout" title="Header Details" columnsM="2" columnsL="2" columnsXL="2">
                    <f:content>
                        <core:Title text="General Info" />
                        <Label text="Requestor"/>
                        <Text text="{requestor}"/>
                        <Label text="Created At"/>
                        <Text text="{createdAt}"/>

                        <core:Title text="Financials" />
                        <Label text="Selected Vendor"/>
                        <Text text="{selectedVendor}"/>
                        <Label text="Total Value"/>
                        <ObjectNumber number="{
                            parts: [{path: 'totalValue'}, {path: 'view>/currencyCode'}],
                            type: 'sap.ui.model.type.Currency',
                            formatOptions: { showMeasure: false }
                        }" unit="{view>/currencyCode}" state="Success" />
                    </f:content>
                </f:SimpleForm>
            </VBox>

            <Table
                headerText="Items"
                items="{
                    path: 'items',
                     parameters : {
                        $expand : 'header'
                    }
                }"
                class="sapUiResponsiveMargin"
                width="auto">
                <columns>
                    <Column><Text text="Product Name"/></Column>
                    <Column><Text text="Quantity"/></Column>
                    <Column><Text text="Price"/></Column>
                    <Column><Text text="Cost Center"/></Column>
                </columns>
                <items>
                    <ColumnListItem>
                        <cells>
                            <ObjectIdentifier title="{materialName}"/>
                            <Text text="{quantity}"/>
                             <ObjectNumber number="{
                                parts: [{path: 'price'}, {path: 'view>/currencyCode'}],
                                type: 'sap.ui.model.type.Currency',
                                formatOptions: { showMeasure: false }
                            }" unit="{view>/currencyCode}" />
                            <Text text="{costCenter}"/>
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
            
             <VBox class="sapUiMediumMargin">
                 <Button text="Send for Approval" type="Accept" press=".onSendForApproval" enabled="{= ${status} === 'Created' }" width="100%"/>
             </VBox>
        </content>
    </Page>
</mvc:View>
