<mvc:View
    controllerName="com.procurement.ui.controller.RequisitionList"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    displayBlock="true">
    <Page title="My Requisitions" showNavButton="true" navButtonPress=".onNavBack">
        <content>
            <Table
                id="requisitionTable"
                inset="false"
                fixedLayout="false"
                items="{
                    path: '/RequisitionHeader',
                    sorter: [
                        { path: 'status', descending: false },
                        { path: 'createdAt', descending: true }
                    ],
                    parameters: {
                        $count: true,
                         $expand: 'items' 
                    }
                }"
                updateFinished=".onUpdateFinished"
                class="sapUiResponsiveMargin"
                width="100%">
                <headerToolbar>
                    <OverflowToolbar>
                        <Title text="Requisitions" level="H2"/>
                        <ToolbarSpacer/>
                    </OverflowToolbar>
                </headerToolbar>
                <columns>
                    <Column width="14rem"><Text text="Requisition ID"/></Column>
                    <Column width="8rem" minScreenWidth="Tablet" demandPopin="true"><Text text="Status"/></Column>
                    <Column width="10rem" minScreenWidth="Desktop" demandPopin="true"><Text text="Total Value"/></Column>
                    <Column width="10rem" minScreenWidth="Tablet" demandPopin="true"><Text text="Vendor"/></Column>
                    <Column width="12rem" minScreenWidth="Tablet" demandPopin="true"><Text text="Created At"/></Column>
                    <Column hAlign="End" width="6rem" minScreenWidth="Desktop" demandPopin="true"><Text text="Actions"/></Column>
                </columns>
                <items>
                    <ColumnListItem type="Active">
                        <cells>
                            <ObjectIdentifier title="{requisitionHeaderID}"/>
                            <ObjectStatus 
                                text="{status}" 
                                state="{path: 'status', formatter: '.formatter.formatStatusState'}" 
                                icon="{path: 'status', formatter: '.formatter.formatStatusIcon'}"
                            />
                            <ObjectNumber number="{
                                parts: [{path: 'totalValue'}, {path: 'view>/currencyCode'}],
                                type: 'sap.ui.model.type.Currency',
                                formatOptions: { showMeasure: false }
                            }" unit="USD" />
                            <Text text="{selectedVendor}"/>
                            <Text text="{createdAt}"/>
                            <HBox justifyContent="End" alignItems="Center">
                                <MenuButton icon="sap-icon://overflow" type="Transparent" tooltip="More actions">
                                    <menu>
                                        <Menu>
                                            <MenuItem text="Edit" icon="sap-icon://edit" press=".onEditRequisition"/>
                                            <MenuItem text="Delete" icon="sap-icon://delete" press=".onDeleteRequisition" enabled="{= ${status} !== 'Approved' }"/>
                                        </Menu>
                                    </menu>
                                </MenuButton>
                            </HBox>
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </content>
    </Page>
</mvc:View>
